# Flask configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
FLASK_APP=app.py
FLASK_ENV=development
PORT=5000
DEBUG=True
HOST=0.0.0.0

# Database configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# File upload configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# OpenAI API configuration
OPENAI_API_KEY=your-openai-api-key

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# AI Service API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# Ollama Settings
OLLAMA_HOST=http://localhost:11434

# Model Settings
DEFAULT_MODEL=ollama  # Can be: ollama, claude, mistral, or huggingface

# Feature Flags
ENABLE_PRIVATE_DATA_ANALYSIS=true
FALLBACK_TO_LOCAL=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Visualization Configuration
VISUALIZATION_FOLDER=static/visualizations
DASHBOARD_FOLDER=static/dashboards

# Cache Configuration
CACHE_DEFAULT_TIMEOUT=3600  # 1 hour
CACHE_TYPE=redis

# Security
CORS_ORIGINS=http://localhost:3000 